			<posy>326</posy>
			<width>350</width>
			<height>59</height>
			<texturefocus>guide-button-focus.png</texturefocus>
			<texturenofocus>-</texturenofocus>
			<pulseonselect>no</pulseonselect>
			<onclick>XBMC.RestartApp</onclick>
			<onclick>Dialog.Close(1968)</onclick>
			<onleft>11</onleft>
			<onright>11</onright>
